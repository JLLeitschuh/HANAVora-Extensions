<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>spark-sap-parent</artifactId>
    <groupId>com.sap.spark</groupId>
    <version>1.2.10</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <name>Spark SAP Extensions Distribution</name>
  <artifactId>extensiondist</artifactId>

  <properties>
    <minimum.code.covered.ratio>0</minimum.code.covered.ratio>
    <env.classifier>assembly</env.classifier>
  </properties>
  <dependencies>
    <dependency>
      <groupId>com.sap.spark</groupId>
      <artifactId>core</artifactId>
      <version>${project.version}</version>
      <classifier>${build.classifier}</classifier>
    </dependency>
    <dependency>
      <groupId>com.sap.spark</groupId>
      <artifactId>sap-thriftserver</artifactId>
      <version>${project.version}</version>
      <classifier>${build.classifier}</classifier>
    </dependency>
    <dependency>
      <groupId>com.sap.spark</groupId>
      <artifactId>zeppelin</artifactId>
      <version>${project.version}</version>
      <classifier>${build.classifier}</classifier>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.scalastyle</groupId>
        <artifactId>scalastyle-maven-plugin</artifactId>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.2</version>
        <configuration>
          <finalName>
            ${project.parent.artifactId}-${project.version}-${env.classifier}
          </finalName>
          <shadedArtifactAttached>true</shadedArtifactAttached>
          <shadedClassifierName>${build.classifier}${env.classifier}</shadedClassifierName>
          <relocations>
            <relocation>
              <pattern>com.google</pattern>
              <shadedPattern>com.sap.hanalite.com.google</shadedPattern>
            </relocation>
          </relocations>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
              </excludes>
            </filter>
          </filters>
          <artifactSet>
            <excludes>
              <exclude>classworlds:classworlds</exclude>
              <exclude>junit:junit</exclude>
              <exclude>jmock:*</exclude>
              <exclude>*:xml-apis</exclude>
              <exclude>org.apache.maven:lib:tests</exclude>
            </excludes>
          </artifactSet>
          <transformers>
            <transformer
                    implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
            <transformer
                    implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
              <resource>reference.conf</resource>
            </transformer>
          </transformers>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <!-- this creates your *.tar.gz -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.5.5</version>
        <executions>
          <execution>
            <id>${project.artifactId}-${project.version}</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <appendAssemblyId>true</appendAssemblyId> <!-- changed from false -->
              <descriptors>
                <descriptor>platform-assembly.xml</descriptor>
              </descriptors>
              <classifier>${build.classifier}</classifier>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>

    <!-- selective deployment of the extensiondist-*-tar.gz  -->
    <profile>
      <id>spark-1.5</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-install-plugin</artifactId>
            <version>2.5.2</version>
             <executions>
               <execution>
                 <id>file-install-tgz</id>
                 <phase>install</phase>
                 <goals>
                   <goal>install-file</goal>
                 </goals>
                 <configuration>
                   <file>${project.build.directory}/${project.artifactId}-${project.version}-${build.classifier}.tar.gz</file>
                   <artifactId>${project.artifactId}</artifactId>
                   <groupId>${project.groupId}</groupId>
                   <version>${project.version}</version>
                   <classifier>${build.classifier}</classifier>
                   <packaging>tar.gz</packaging>
                 </configuration>
               </execution>
             </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <!-- We only want to run this test when we execute all the tests -->
    <profile>
      <id>full-tests</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.4.0</version>
            <executions>
              <execution>
              <configuration>
                <executable>./run-tests</executable>
                <workingDirectory>src/main/resources/python</workingDirectory>
                <environmentVariables>
                  <PYTHONPATH>../../main/python:$PYTHONPATH</PYTHONPATH>
                  <SKIP_TESTS>${skipTests}</SKIP_TESTS>
                  <COMPAT_ARTIFACT_ID>${compat.artifact.id}</COMPAT_ARTIFACT_ID>
                </environmentVariables>
              </configuration>
              <id>python-test</id>
              <phase>test</phase>
              <goals>
                <goal>exec</goal>
              </goals>
            </execution>
              <execution>
                <configuration>
                  <executable>./run-tests</executable>
                  <workingDirectory>src/test/resources/R</workingDirectory>
                  <environmentVariables>
                    <SKIP_TESTS>${skipTests}</SKIP_TESTS>
                    <COMPAT_ARTIFACT_ID>${compat.artifact.id}</COMPAT_ARTIFACT_ID>
                  </environmentVariables>
                </configuration>
                <id>R-test</id>
                <phase>test</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
